---
import "../styles/globals.css";
import { Header } from "../components/Header";
import { Footer } from "../components/Footer";

interface Props {
	title: string;
}

const { title } = Astro.props;

import { STORE_URL } from "../consts";

const links = [
	{ label: "Safety Signs", href: "/safety-signs" },
	{ label: "Fire Safety", href: "/fire-safety" },
	{ label: "Construction", href: "/construction" },
	{ label: "Road Traffic", href: "/road-traffic" },
	{ label: "First Aid", href: "/first-aid" },
];

let logo = null;
try {
	const response = await fetch(`${STORE_URL}/api/settings/logo`);
	if (response.ok) {
		const data = await response.json();
		logo = data.logo;
	}
} catch (error) {
	console.error("Failed to fetch logo during build:", error);
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		class="font-body text-foreground antialiased flex flex-col min-h-screen"
	>
		<Header client:load links={links} logo={logo} />
		<div class="flex-1">
			<slot />
		</div>
		<Footer client:load />
	</body>
</html>
