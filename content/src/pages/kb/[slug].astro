---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const articles = await getCollection("kb");
    return articles.map((article) => ({
        params: { slug: article.slug },
        props: article,
    }));
}
type Props = CollectionEntry<"kb">;

const article = Astro.props;
const { Content } = await article.render();

// Breadcrumb data
const breadcrumbs = [
    { label: "Home", href: "/" },
    { label: "Knowledge Base", href: "/kb" },
    {
        label: article.data.category,
        href: `/kb#${article.data.category.toLowerCase().replace(/\s+/g, "-")}`,
    },
];
---

<Layout title={`${article.data.title} | Knowledge Base`}>
    <main class="bg-slate-50 min-h-screen">
        <!-- Breadcrumb -->
        <div class="bg-white border-b border-slate-200">
            <div
                class="container mx-auto px-4 py-3 text-xs text-slate-500 flex items-center gap-2"
            >
                {
                    breadcrumbs.map((crumb, i) => (
                        <>
                            {i > 0 && (
                                <svg
                                    class="w-3 h-3"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 5l7 7-7 7"
                                    />
                                </svg>
                            )}
                            <a
                                href={crumb.href}
                                class="hover:text-orange-600 transition-colors"
                            >
                                {crumb.label}
                            </a>
                        </>
                    ))
                }
                <svg
                    class="w-3 h-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"></path>
                </svg>
                <span class="font-bold text-slate-900 truncate"
                    >{article.data.title}</span
                >
            </div>
        </div>

        <div class="container mx-auto px-4 py-12">
            <article class="max-w-3xl mx-auto">
                <!-- Header -->
                <header class="mb-8">
                    <div class="flex flex-wrap items-center gap-3 mb-4">
                        <span
                            class="px-3 py-1 bg-orange-100 text-orange-700 text-xs font-bold rounded-full"
                        >
                            {article.data.category}
                        </span>
                        {
                            article.data.subcategory && (
                                <span class="px-3 py-1 bg-slate-100 text-slate-600 text-xs font-bold rounded-full">
                                    {article.data.subcategory}
                                </span>
                            )
                        }
                        {
                            article.data.difficulty && (
                                <span
                                    class={`px-3 py-1 text-xs font-bold rounded-full ${
                                        article.data.difficulty === "Beginner"
                                            ? "bg-green-100 text-green-700"
                                            : article.data.difficulty ===
                                                "Intermediate"
                                              ? "bg-yellow-100 text-yellow-700"
                                              : "bg-red-100 text-red-700"
                                    }`}
                                >
                                    {article.data.difficulty}
                                </span>
                            )
                        }
                    </div>
                    <h1
                        class="text-3xl md:text-4xl font-black text-slate-900 mb-4 leading-tight"
                    >
                        {article.data.title}
                    </h1>
                    <p class="text-lg text-slate-600 mb-4">
                        {article.data.description}
                    </p>
                    <div class="flex items-center gap-4 text-sm text-slate-400">
                        {
                            article.data.readingTime && (
                                <span>
                                    ðŸ“– {article.data.readingTime} min read
                                </span>
                            )
                        }
                        <span>
                            Last updated: {
                                article.data.lastUpdated.toLocaleDateString(
                                    "en-gb",
                                    {
                                        year: "numeric",
                                        month: "short",
                                        day: "numeric",
                                    },
                                )
                            }
                        </span>
                    </div>
                </header>

                <!-- Content -->
                <div
                    class="bg-white rounded-xl shadow-sm border border-slate-200 p-8 prose prose-lg prose-headings:font-black prose-headings:text-slate-900 prose-p:text-slate-600 prose-a:text-orange-600 prose-strong:text-slate-900 max-w-none"
                >
                    <Content />
                </div>

                <!-- Related Products -->
                {
                    article.data.relatedProducts &&
                        article.data.relatedProducts.length > 0 && (
                            <div class="mt-12 p-8 bg-[#1e293b] rounded-xl text-white">
                                <h2 class="text-xl font-bold mb-4">
                                    Related Products
                                </h2>
                                <p class="text-slate-400 text-sm">
                                    Browse products mentioned in this article.
                                </p>
                            </div>
                        )
                }
            </article>
        </div>
    </main>
</Layout>
