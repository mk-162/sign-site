---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import ProductCard from "../../components/ProductCard.astro";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
    <main class="container mx-auto px-4 py-12">
        <article class="max-w-3xl mx-auto">
            <header class="mb-8 text-center">
                <div
                    class="flex items-center justify-center gap-2 text-sm font-bold uppercase text-primary mb-4"
                >
                    {post.data.tags.map((tag) => <span>#{tag}</span>)}
                </div>
                <h1
                    class="text-4xl md:text-5xl font-heading font-bold text-foreground mb-4 leading-tight"
                >
                    {post.data.title}
                </h1>
                <div
                    class="flex items-center justify-center gap-4 text-sm text-contrast-500"
                >
                    <span>By {post.data.author}</span>
                    <span>â€¢</span>
                    <time datetime={post.data.pubDate.toISOString()}>
                        {
                            post.data.pubDate.toLocaleDateString("en-gb", {
                                year: "numeric",
                                month: "long",
                                day: "numeric",
                            })
                        }
                    </time>
                </div>
            </header>

            {
                post.data.heroImage && (
                    <div class="aspect-video rounded-xl overflow-hidden mb-12 shadow-md">
                        <img
                            src={post.data.heroImage}
                            alt=""
                            class="w-full h-full object-cover"
                        />
                    </div>
                )
            }

            <div
                class="prose prose-lg prose-headings:font-heading prose-headings:font-bold prose-headings:text-foreground prose-p:text-contrast-500 prose-a:text-primary prose-strong:text-foreground max-w-none"
            >
                <Content />
            </div>

            {
                post.data.relatedProducts &&
                    post.data.relatedProducts.length > 0 && (
                        <div class="mt-12 pt-12 border-t border-contrast-100">
                            <h2 class="text-2xl font-bold font-heading mb-6">
                                Related Products
                            </h2>
                            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                                {post.data.relatedProducts.map((id) => (
                                    <ProductCard productId={id} />
                                ))}
                            </div>
                        </div>
                    )
            }
        </article>
    </main>
</Layout>
